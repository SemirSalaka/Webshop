<!DOCTYPE html>
<html>
  <head>
    <title><%= title %> trgovca</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %> trgovca</h1>

    <form action="/objavaArtiklaUsluge" method="post">
      <label>Naziv:</label>
      <input type="text" name="naziv_artikla">
      <br>

      <label>Opis:</label>
      <input type="text" name="opis">
      <br>

      <label>Kolicina:</label>
      <input type="number" name="kolicina">
      <br>

      <label>Cijena:</label>
      <input type="number" name="cijena">
      <br>
      unos slika za artikal

      <label>Kategorija artikla:</label>
      <div class="input-group mb-3">
        <% for (let i=0; i<kategorijeUsluga.length; i++) { %>
          <div class="input-group-text">
            <input id="<%= kategorijeUsluga[i].id %>" class="form-check-input mt-0 checkbox" type="checkbox"
                   aria-label="Checkbox for following text input"
                   onclick="vratiKategorije(<%= kategorijeUsluga[i].id %>)" >

            <label><%= kategorijeUsluga[i].naziv_kategorije %></label>
          </div>
        <% } %>
      </div>
      <br>

      <input id="text" style="display:none" id="kategorije" name="kategorije" value="" >

      <button type="submit">Spasi</button>
    </form>
    <script>
      var kategorije= [];

      function vratiKategorije(id) {
        var checkBox = document.getElementById(id);
        var text = document.getElementById("text");

        if(checkBox.checked){
          kategorije.push(id);
          document.getElementById(id).value = "true";
        } else {
          kategorije.splice(kategorije.indexOf(id), 1);
        }
        text.value = kategorije;
        //console.log(text.value);
        //return kategorije;
      }
    </script>
  </body>
</html>
