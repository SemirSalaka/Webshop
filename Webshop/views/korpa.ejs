<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
  <h1>Korpa</h1>

  <% var ukupnaCijena = 0;%>
  <% if(korpa.length > 0){ %>
  <table class="table">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Naziv</th>
      <th scope="col">Cijena</th>
      <th scope="col">Kolicina</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    <%for (let i=0; i<korpa.length; i++){%>
      <% ukupnaCijena += korpa[i].cijena * korpa[i].kolicina%>
      <tr>
        <th scope="row"><%= i+1%></th>
        <td><%= korpa[i].naziv%></td>
        <td><%= korpa[i].cijena * korpa[i].kolicina%></td>
        <td><%= korpa[i].kolicina%></td>
        <td><a id="dodaj" href="/korpa/azuriraj/<%=korpa[i].id%>?akcija=dodaj">+</a></td>
        <td><a id="oduzmi" href="/korpa/azuriraj/<%=korpa[i].id%>?akcija=oduzmi">-</a></td>
        <td><a id="obrisi" href="/korpa/azuriraj/<%=korpa[i].id%>?akcija=obrisi"><input type="button" value="Obrisi"></a></td>
      </tr>
    <% } %>
    </tbody>
  </table>

  <h3>Ukupni racun iznosi <%= ukupnaCijena %></h3>
  <form action="/naruci" method="post" name="naruci">
    <button type="submit">Naruci</button>

  </form>
  <% } else {%>
  <h2>Nema artikala u korpi</h2>
  <%}%>

  <script>
    function naruci() {
      window.location = '/naruci';
    }

  </script>

  </body>
</html>
