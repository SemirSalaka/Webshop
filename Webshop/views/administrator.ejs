<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <a href="/logout"><button>Logout</button></a>
    <h1>Administrator</h1>

    <br>
    <a href="/statistika"><button>Statistika</button></a>
    <br>
    <form action="/posaljiPorukuSvimKorisnicima" method="post">
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Example textarea</label>
        <textarea name="poruka" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        <br>
        <input type="submit">
      </div>
    </form>
    <h2>Trgovci</h2>

    <table class="table">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Korisnicko ime</th>
        <th scope="col">Ime</th>
        <th scope="col">Prezime</th>
        <th scope="col">Email</th>
        <th scope="col">Telefon</th>
        <th scope="col">Adresa sjedista</th>
        <th scope="col"></th>
      </tr>
      </thead>
      <%for (let i=0; i<trgovci.length; i++){%>
        <tr>
          <td><%= i+1 %></td>

          <td>
            <h4><%= trgovci[i].korisnicko_ime %></h4>
          </td>

          <td>
            <h4><%= trgovci[i].ime %></h4>
          </td>
          <td>
            <h4><%= trgovci[i].prezime %></h4>
          </td>
          <td>
            <h4><%= trgovci[i].email %></h4>
          </td>
          <td>
            <h4><%= trgovci[i].telefon %></h4>
          </td>
          <td>
            <h4><%= trgovci[i].adresa_sjedista%></h4>
          </td>
          <td>
            <form action="/arhiviraj?id=<%=trgovci[i].id%>" method="post" name="arhiviraj">
              <input type="submit" value="Arhiviraj">
            </form>
          </td>

          <td>
            <form action="/blokirajNa15dana?id=<%=trgovci[i].id%>" method="post" name="blokirajNa15dana">
              <input type="submit" value="Blokiraj na 15 dana">
            </form>
          </td>
        </tr>
      <%}%>
    </table>

    <h2>Kupci</h2>
    <table class="table">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Korisnicko ime</th>
        <th scope="col">Ime</th>
        <th scope="col">Prezime</th>
        <th scope="col">Email</th>
        <th scope="col">Telefon</th>
        <th scope="col">Adresa sjedista</th>
        <th scope="col"></th>
      </tr>
      </thead>
      <%for (let i=0; i<kupci.length; i++){%>
        <tr>
          <td><%= i+1 %></td>

          <td>
            <h4><%= kupci[i].korisnicko_ime %></h4>
          </td>

          <td>
            <h4><%= kupci[i].ime %></h4>
          </td>
          <td>
            <h4><%= trgovci[i].prezime %></h4>
          </td>
          <td>
            <h4><%= kupci[i].email %></h4>
          </td>
          <td>
            <h4><%= kupci[i].telefon %></h4>
          </td>
          <td>
            <h4><%= kupci[i].adresa_sjedista%></h4>
          </td>
          <td>
            <form action="/arhiviraj?id=<%=kupci[i].id%>" method="post" name="arhiviraj">
              <input type="submit" value="Arhiviraj">
            </form>
          </td>

          <td>
            <form action="/blokirajNa15dana?id=<%=kupci[i].id%>" method="post" name="blokirajNa15dana">
              <input type="submit" value="Blokiraj na 15 dana">
            </form>
          </td>
        </tr>
      <%}%>
    </table>

    </div>

  </body>
</html>
