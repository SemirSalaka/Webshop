<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
  <%- include('./komponente/navbar') %>

  <h1>Artikal</h1>
    <br>
    <h3><%= artikal[0].naziv_artikla%></h3>

    <div class="d-flex justify-content-center container">

      <div class="d-flex justify-content-center container">
        <div id="glavneInformacijeArtikla" class="d-flex justify-content-center container">
          <div><h3><%= artikal[0].cijena%>KM</h3></div>
          <div><h3><%= artikal[0].adresa_sjedista%></h3></div>
        </div>
        <img src="/images/artikal.jpg" class="img-thumbnail " alt="slika artikla" width="300" height="200">
      </div>

      <div>

        <div id="<%= artikal[0].korisnicko_ime%>" class="d-flex justify-content-center container" onclick="otvoriProfilTrgovca('<%= artikal[0].korisnicko_ime%>')">
          <img src="/images/artikal.jpg" class="" alt="slika artikla" width="60px" height="60px">
          <p><%= artikal[0].korisnicko_ime%></p>
        </div>

      </div>
    </div>

  <% if (aktivnost === 'aktivan'){%>
    <input type="button" id="stavi" value="Stavi u korpu" onclick="dodajUkorpu(<%= artikal[0].artikal_id%>)">
  <%}%>

  <script>
    function otvoriProfilTrgovca(korisnik) {
      console.info(korisnik);
      window.location = '/trgovac/' + korisnik;
    }
    function dodajUkorpu(id) {
      window.location = '/dodajUKorpu/' + id;
    }
  </script>

  </body>
</html>
