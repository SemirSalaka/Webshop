<!DOCTYPE html>
<html>
  <head>
    <title><%= title %> kupca</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %> kupca</h1>

    <form action="/registracija/registracijaKupca" method="post">
      <label>Korisnicko ime:</label>
      <input type="text" name="korisnicko_ime">
      <br>

      <label>Ime:</label>
      <input type="text" name="ime">
      <br>

      <label>Prezime:</label>
      <input type="text" name="prezime">
      <br>

      <label>Kontakt telefon:</label>
      <input type="text" name="kontakt_telefon">
      <br>

      <label>E-mail:</label>
      <input type="email" name="email">
      <br>

      <div class="input-group mb-3">
          <% for (let i=0; i<interesi.length; i++) { %>
              <div class="input-group-text">
                  <input id="<%= interesi[i].id %>" class="form-check-input mt-0 checkbox" type="checkbox"
                         aria-label="Checkbox for following text input"
                         onclick="vratiInterese(<%= interesi[i].id %>)" >

                  <label><%= interesi[i].naziv_kategorije %></label>
              </div>
          <% } %>
      </div>
      <br>

      <input id="text" style="display:none" id="interesi" name="interesi" value="" >

      <label>Lozinka:</label>
      <input type="password" name="lozinka">
      <br>

      <button type="submit">Spasi</button>
    </form>
    <script>
      var interesi= [];

      function vratiInterese(id) {
        var checkBox = document.getElementById(id);
        var text = document.getElementById("text");

        if(checkBox.checked){
          interesi.push(id);
          document.getElementById(id).value = "true";
        } else {
          interesi.splice(interesi.indexOf(id), 1);
        }

        text.value = interesi;
        console.log(text.value);
        //return kategorije;
      }
    </script>
  </body>
</html>
