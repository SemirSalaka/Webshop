<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
  <body>
    <h1>Administrator</h1>

    <h2>Statistika</h2>
    <canvas id="myChart" width="400" height="400"></canvas>b
    <br>
    <br>
    <table class="table">
      <thead>
        <tr>
          <td>Naziv</td>
          <td>Broj</td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Broj korisnika</td>
          <td><%= brojKorisnika%></td>
        </tr>
        <tr>
          <td>Broj kupaca</td>
          <td><%= brojKupaca%></td>
        </tr>
        <tr>
          <td>Broj trgovina</td>
          <td><%= brojTrgovina%></td>
        </tr>
        <tr>
          <td>Broj narudzbi</td>
          <td><%= brojNarudzbi%></td>
        </tr>
      </tbody>
    </table>
    <script>
      const ctx = document.getElementById('myChart').getContext('2d');
      const myChart = new Chart(ctx, {
        type: 'bar',
        data: {
          labels: ['brojKorisnika', 'brojKupaca', 'brojTrgovina', 'brojNarudzbi'],
          datasets: [{
            label: 'Statistika',
            data: [<%= brojKorisnika %>, <%= brojKupaca%>, <%=brojTrgovina%>, <%=brojNarudzbi%>],
            backgroundColor: [
              'rgba(255, 99, 132, 0.2)',
              'rgba(54, 162, 235, 0.2)',
              'rgba(255, 206, 86, 0.2)',
              'rgba(75, 192, 192, 0.2)',
              'rgba(153, 102, 255, 0.2)',
              'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
              'rgba(255, 99, 132, 1)',
              'rgba(54, 162, 235, 1)',
              'rgba(255, 206, 86, 1)',
              'rgba(75, 192, 192, 1)',
              'rgba(153, 102, 255, 1)',
              'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
          }]
        },
        options: {
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      });
    </script>

  </body>
</html>
